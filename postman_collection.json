{
  "info": {
    "name": "NatalCard API",
    "description": "Complete API collection for NatalCard astrology calculation service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Natal Chart API",
      "item": [
        {
          "name": "Calculate Natal Chart (English)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"birthDateTimeLocal\": \"1996-04-23T14:35:00\",\n  \"timeZoneId\": \"Europe/Istanbul\",\n  \"latitude\": 40.983,\n  \"longitude\": 29.029,\n  \"zodiac\": \"TROPICAL\",\n  \"houseSystem\": \"PLACIDUS\",\n  \"includeAspects\": true,\n  \"language\": \"en\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/astro/natal-chart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "astro", "natal-chart"]
            },
            "description": "Calculate a natal chart with English localization"
          }
        },
        {
          "name": "Calculate Natal Chart (Turkish)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
