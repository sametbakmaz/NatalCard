              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"birthDateTimeLocal\": \"1996-04-23T14:35:00\",\n  \"timeZoneId\": \"Europe/Istanbul\",\n  \"latitude\": 40.983,\n  \"longitude\": 29.029,\n  \"zodiac\": \"TROPICAL\",\n  \"houseSystem\": \"PLACIDUS\",\n  \"includeAspects\": true,\n  \"language\": \"tr\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/astro/natal-chart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "astro", "natal-chart"]
            },
            "description": "Calculate a natal chart with Turkish localization"
          }
        },
        {
          "name": "Whole Sign Houses",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"birthDateTimeLocal\": \"1985-08-05T14:00:00\",\n  \"timeZoneId\": \"America/New_York\",\n  \"latitude\": 40.7128,\n  \"longitude\": -74.0060,\n  \"zodiac\": \"TROPICAL\",\n  \"houseSystem\": \"WHOLE_SIGN\",\n  \"includeAspects\": true,\n  \"language\": \"en\"\n}"
